<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">

            <div class="card">
                <div class="card card-course-item">
                    <a href="/courses/{{this.slug}}">
                        <img class="card-img-top" src="{{this.image}}" class="card-img-top" alt="{{this.image}}" />
                    </a>
                    <div class="card-body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>

                        <a href="#" class="btn btn-primary">Buy Courses</a>
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>